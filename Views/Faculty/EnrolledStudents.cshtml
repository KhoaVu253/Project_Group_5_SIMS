@model SIMS.Models.Course
@{
    ViewData["Title"] = "Student List";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-people"></i> Student List</h2>
            <p class="text-muted">@Model.CourseCode - @Model.CourseName</p>
        </div>
        <div class="col-auto">
            <a asp-action="MyCourses" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                Total: @Model.Enrollments.Count students
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Enrollments.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No students enrolled in this course yet.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Student ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Class</th>
                                <th>Enrollment Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int index = 1; }
                            @foreach (var enrollment in Model.Enrollments.OrderBy(e => e.Student.StudentCode))
                            {
                                <tr>
                                    <td>@index</td>
                                    <td><strong>@enrollment.Student.StudentCode</strong></td>
                                    <td>@enrollment.Student.FullName</td>
                                    <td>@enrollment.Student.Email</td>
                                    <td>@enrollment.Student.ClassName</td>
                                    <td>@enrollment.EnrollmentDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
