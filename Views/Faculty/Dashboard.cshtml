@model SIMS.Models.Faculty
@{
    ViewData["Title"] = "Faculty Dashboard";
}

<div class="page-header">
    <h2>
        <i class="bi bi-speedometer2"></i>
        Faculty Dashboard
    </h2>
    <p class="text-muted">Hello, <strong class="text-navy">@Model.FullName</strong>!</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="stat-card stat-card-navy">
            <i class="bi bi-journals icon"></i>
            <h6>Teaching Courses</h6>
            <h2>@ViewBag.TotalCourses</h2>
            <a asp-action="MyCourses" class="text-white text-decoration-none mt-2 d-inline-block">
                <small>View Details <i class="bi bi-arrow-right"></i></small>
            </a>
        </div>
    </div>

    <div class="col-md-6">
        <div class="stat-card stat-card-blue">
            <i class="bi bi-people-fill icon"></i>
            <h6>Total Students</h6>
            <h2>@ViewBag.TotalStudents</h2>
            <small class="text-white d-block mt-2">Enrolled in Courses</small>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-circle me-2"></i>
                Personal Information
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-start gap-3">
                            <i class="bi bi-card-heading text-navy" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Faculty Code</small>
                                <strong>@Model.FacultyCode</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-start gap-3">
                            <i class="bi bi-person-fill text-navy" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Full Name</small>
                                <strong>@Model.FullName</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-start gap-3">
                            <i class="bi bi-envelope-fill text-navy" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Email</small>
                                <strong>@Model.Email</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-start gap-3">
                            <i class="bi bi-telephone-fill text-navy" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Phone Number</small>
                                <strong>@Model.Phone</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="d-flex align-items-start gap-3">
                            <i class="bi bi-building text-navy" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Department</small>
                                <strong>@Model.Department</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightning-fill me-2"></i>
                Quick Access
            </div>
            <div class="card-body">
                <div class="d-grid gap-3">
                    <a asp-action="MyCourses" class="btn btn-outline-primary d-flex align-items-center justify-content-start gap-2">
                        <i class="bi bi-journals"></i>
                        My Courses
                    </a>
                    <a asp-action="MySchedule" class="btn btn-outline-success d-flex align-items-center justify-content-start gap-2">
                        <i class="bi bi-calendar-week"></i>
                        My Teaching Schedule
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
