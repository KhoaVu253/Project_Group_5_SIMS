<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTEC FPT</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Custom Modern CSS -->
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body class="modern-theme">
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- ============================================
             MODERN TOP NAVBAR - No Sidebar
             ============================================ -->
        <nav class="navbar-modern">
            <div class="navbar-container">
                <!-- Logo -->
                <a href="#" class="navbar-brand">
                    <i class="bi bi-mortarboard-fill"></i>
                    <span>BTEC FPT</span>
                </a>
                
                <!-- Mobile Menu Toggle -->
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="bi bi-list"></i>
                </button>
                
                <!-- Desktop Menu Items -->
                <div class="navbar-menu" id="navbarMenu">
                    @if (User.IsInRole("Admin"))
                    {
                        <!-- ADMIN MENU -->
                        <a asp-controller="Admin" asp-action="Index" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                        
                        <div class="nav-dropdown">
                            <button class="nav-item dropdown-toggle">
                                <i class="bi bi-people-fill"></i>
                                <span>Management</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a asp-controller="Admin" asp-action="Students" class="dropdown-item">
                                    <i class="bi bi-person-badge"></i>
                                    <span>Students</span>
                                </a>
                                <a asp-controller="Admin" asp-action="Faculties" class="dropdown-item">
                                    <i class="bi bi-person-workspace"></i>
                                    <span>Faculty</span>
                                </a>
                                <a asp-controller="Admin" asp-action="Courses" class="dropdown-item">
                                    <i class="bi bi-book-half"></i>
                                    <span>Courses</span>
                                </a>
                            </div>
                        </div>
                        
                        <div class="nav-dropdown">
                            <button class="nav-item dropdown-toggle">
                                <i class="bi bi-calendar-week"></i>
                                <span>Schedule</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a asp-controller="Admin" asp-action="ManageSchedules" class="dropdown-item">
                                    <i class="bi bi-calendar3"></i>
                                    <span>View Schedule</span>
                                </a>
                                <a asp-controller="Admin" asp-action="CreateSchedule" class="dropdown-item">
                                    <i class="bi bi-calendar-plus"></i>
                                    <span>Create New Schedule</span>
                                </a>
                            </div>
                        </div>
                        
                        <div class="nav-dropdown">
                            <button class="nav-item dropdown-toggle">
                                <i class="bi bi-person-check"></i>
                                <span>Assignment</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a asp-controller="Admin" asp-action="ManageEnrollments" class="dropdown-item">
                                    <i class="bi bi-list-check"></i>
                                    <span>Manage Enrollments</span>
                                </a>
                                <a asp-controller="Admin" asp-action="AssignStudents" class="dropdown-item">
                                    <i class="bi bi-person-plus"></i>
                                    <span>Assign Students</span>
                                </a>
                                <a asp-controller="Admin" asp-action="BulkAssign" class="dropdown-item">
                                    <i class="bi bi-people"></i>
                                    <span>Bulk Assignment</span>
                                </a>
                            </div>
                        </div>
                        
                        <div class="nav-dropdown">
                            <button class="nav-item dropdown-toggle">
                                <i class="bi bi-shield-lock"></i>
                                <span>Accounts</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a asp-controller="Admin" asp-action="ManageAccounts" class="dropdown-item">
                                    <i class="bi bi-person-lines-fill"></i>
                                    <span>Manage Accounts</span>
                                </a>
                            </div>
                        </div>
                    }
                    
                    @if (User.IsInRole("Student"))
                    {
                        <!-- STUDENT MENU -->
                        <a asp-controller="Student" asp-action="Dashboard" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="bi bi-house-door-fill"></i>
                            <span>Dashboard</span>
                        </a>
                        
                        <a asp-controller="Student" asp-action="WeeklySchedule" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "WeeklySchedule" ? "active" : "")">
                            <i class="bi bi-calendar-week"></i>
                            <span>Schedule</span>
                        </a>
                        
                        <a asp-controller="Student" asp-action="MySchedule" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MySchedule" ? "active" : "")">
                            <i class="bi bi-journals"></i>
                            <span>Courses</span>
                        </a>
                        
                        <a asp-controller="Student" asp-action="MyGrades" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MyGrades" ? "active" : "")">
                            <i class="bi bi-trophy-fill"></i>
                            <span>Grades</span>
                        </a>
                    }
                    
                    @if (User.IsInRole("Faculty"))
                    {
                        <!-- FACULTY MENU -->
                        <a asp-controller="Faculty" asp-action="Dashboard" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                            <i class="bi bi-house-door-fill"></i>
                            <span>Dashboard</span>
                        </a>
                        
                        <a asp-controller="Faculty" asp-action="MySchedule" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MySchedule" ? "active" : "")">
                            <i class="bi bi-calendar-week"></i>
                            <span>Teaching Schedule</span>
                        </a>
                        
                        <a asp-controller="Faculty" asp-action="MyCourses" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "MyCourses" ? "active" : "")">
                            <i class="bi bi-journals"></i>
                            <span>My Courses</span>
                        </a>
                    }
                </div>
                
                <!-- User Info -->
                <div class="navbar-user">
                    <div class="user-dropdown">
                        <button class="user-btn">
                            <div class="user-avatar">
                                <span>@User.Identity.Name?.Substring(0, 2).ToUpper()</span>
                            </div>
                            <div class="user-info">
                                <span class="user-name">@User.Identity.Name</span>
                                <span class="user-role">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                            </div>
                            <i class="bi bi-chevron-down"></i>
                        </button>
                        <div class="user-dropdown-content">
                            <div class="dropdown-header">
                                <div class="user-avatar-lg">
                                    <span>@User.Identity.Name?.Substring(0, 2).ToUpper()</span>
                                </div>
                                <div>
                                    <strong>@User.Identity.Name</strong>
                                    <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                                </div>
                            </div>
                            <div class="dropdown-divider"></div>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="dropdown-item logout-btn">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Logout</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        
        <!-- Main Content (No Sidebar) -->
        <main class="main-content">
            <!-- Alerts -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-modern alert-success alert-dismissible fade show" role="alert">
                    <div class="alert-icon">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <strong>Success!</strong>
                        <p>@TempData["Success"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-modern alert-danger alert-dismissible fade show" role="alert">
                    <div class="alert-icon">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <strong>Error!</strong>
                        <p>@TempData["Error"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-modern alert-warning alert-dismissible fade show" role="alert">
                    <div class="alert-icon">
                        <i class="bi bi-exclamation-circle-fill"></i>
                    </div>
                    <div class="alert-content">
                        <strong>Warning!</strong>
                        <p>@TempData["Warning"]</p>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <!-- Page Content -->
            <div class="page-content fade-in">
                @RenderBody()
            </div>
        </main>
    }
    else
    {
        <!-- Login Page (No Nav) -->
        @RenderBody()
    }
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Dropdown Toggle
        document.addEventListener('DOMContentLoaded', function() {
            // Desktop dropdowns
            const dropdowns = document.querySelectorAll('.nav-dropdown');
            dropdowns.forEach(dropdown => {
                const toggle = dropdown.querySelector('.dropdown-toggle');
                const content = dropdown.querySelector('.dropdown-content');
                
                toggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    // Close other dropdowns
                    dropdowns.forEach(d => {
                        if (d !== dropdown) {
                            d.querySelector('.dropdown-content').classList.remove('show');
                        }
                    });
                    content.classList.toggle('show');
                });
            });
            
            // User dropdown
            const userBtn = document.querySelector('.user-btn');
            const userDropdown = document.querySelector('.user-dropdown-content');
            if (userBtn && userDropdown) {
                userBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('show');
                });
            }
            
            // Close dropdowns when clicking outside
            document.addEventListener('click', function() {
                document.querySelectorAll('.dropdown-content, .user-dropdown-content').forEach(d => {
                    d.classList.remove('show');
                });
            });
            
            // Mobile menu toggle
            const mobileToggle = document.getElementById('mobileMenuToggle');
            const navbarMenu = document.getElementById('navbarMenu');
            if (mobileToggle && navbarMenu) {
                mobileToggle.addEventListener('click', function() {
                    navbarMenu.classList.toggle('show');
                    this.querySelector('i').classList.toggle('bi-list');
                    this.querySelector('i').classList.toggle('bi-x-lg');
                });
            }
            
            // Auto-dismiss alerts
            setTimeout(function() {
                document.querySelectorAll('.alert-modern').forEach(function(alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
