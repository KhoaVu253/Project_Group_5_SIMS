@{
    ViewData["Title"] = "Không có quyền truy cập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-container {
            text-align: center;
            color: white;
        }
        .error-icon {
            font-size: 6rem;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <i class="bi bi-shield-exclamation error-icon"></i>
        <h1>Không có quyền truy cập</h1>
        <p class="lead">Bạn không có quyền truy cập vào trang này.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg mt-3">
            <i class="bi bi-arrow-left"></i> Quay lại đăng nhập
        </a>
    </div>
</body>
</html>
