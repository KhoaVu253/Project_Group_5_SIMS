@model SIMS.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="page-header">
    <h2>
        <i class="bi bi-key"></i>
        Reset Account Password
    </h2>
    <p class="text-muted">Set a new password for the account</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person-circle me-2"></i>
                Account Information
            </div>
            <div class="card-body">
                <div class="mb-4 p-3 bg-light rounded">
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted d-block">Username</small>
                            <strong class="text-navy">@Model.Username</strong>
                        </div>
                        <div class="col-6">
                            <small class="text-muted d-block">Full Name</small>
                            <strong>@Model.FullName</strong>
                        </div>
                    </div>
                </div>

                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Username" />
                    <input type="hidden" asp-for="FullName" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="bi bi-lock text-navy me-1"></i>
                            New Password
                        </label>
                        <input asp-for="NewPassword" class="form-control" type="password" 
                               placeholder="Enter new password (minimum 6 characters)" autofocus />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="bi bi-lock-fill text-navy me-1"></i>
                            Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" 
                               placeholder="Re-enter new password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Note:</strong> The user will need to log in again with this new password.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="ManageAccounts" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Reset Password
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-lightbulb text-warning me-1"></i>
                    Password Suggestions
                </h6>
                <ul class="mb-0 small">
                    <li>Password should have at least 6 characters</li>
                    <li>Should combine letters and numbers (e.g: student2024)</li>
                    <li>Avoid using too simple passwords like 123456</li>
                    <li>You can use student/faculty code combined with birth year</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
