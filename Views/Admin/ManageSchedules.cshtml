@model IEnumerable<SIMS.Models.ViewModels.ManageScheduleViewModel>
@{
    ViewData["Title"] = "Schedule Management";
}

<div class="container-fluid">
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h2>
                    <i class="bi bi-calendar-week text-primary"></i>
                    Schedule Management
                </h2>
                <p class="text-muted mb-0">Arrange timetables for courses</p>
            </div>
            <div class="col-auto">
                <a asp-action="CreateSchedule" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Add Schedule
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-light">
            <i class="bi bi-funnel me-2"></i>
            <strong>Filter</strong>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-calendar3 me-1"></i> Semester
                    </label>
                    <select name="semester" class="form-select">
                        @foreach (var sem in ViewBag.Semesters as string[])
                        {
                            <option value="@sem" selected="@(ViewBag.Semester == sem)">@sem</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-calendar-range me-1"></i> Academic Year
                    </label>
                    <input type="text" name="academicYear" value="@ViewBag.AcademicYear" 
                           class="form-control" placeholder="2024-2025">
                </div>
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-calendar-day me-1"></i> Day
                    </label>
                    <select name="dayOfWeek" class="form-select">
                        <option value="">-- All --</option>
                        @foreach (var day in ViewBag.Days as List<(int Value, string Name)>)
                        {
                            <option value="@day.Value" selected="@(ViewBag.DayOfWeek == day.Value)">
                                @day.Name
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">No schedules yet</h4>
                <p class="text-muted">Click "Add Schedule" to start arranging timetables</p>
                <a asp-action="CreateSchedule" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-1"></i> Add First Schedule
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-calendar-check text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Total Schedules</h6>
                                <h3 class="mb-0">@Model.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-book text-success" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Courses</h6>
                                <h3 class="mb-0">@Model.Select(m => m.CourseId).Distinct().Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-door-open text-info" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Rooms</h6>
                                <h3 class="mb-0">@Model.Select(m => m.Room).Distinct().Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-people text-warning" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Students</h6>
                                <h3 class="mb-0">@Model.Sum(m => m.EnrolledStudentsCount)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Schedule Table -->
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <i class="bi bi-list-ul me-2"></i>
                <strong>Schedule List</strong>
                <span class="badge bg-secondary ms-2">@Model.Count()</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;">Course Code</th>
                                <th>Course Name</th>
                                <th style="width: 150px;">Faculty</th>
                                <th style="width: 100px;">Day</th>
                                <th style="width: 80px;">Period</th>
                                <th style="width: 120px;">Time</th>
                                <th style="width: 80px;">Room</th>
                                <th style="width: 60px;" class="text-center">Students</th>
                                <th style="width: 100px;">Status</th>
                                <th style="width: 120px;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var schedule in Model)
                            {
                                <tr>
                                    <td><strong class="text-navy">@schedule.CourseCode</strong></td>
                                    <td>
                                        <div>@schedule.CourseName</div>
                                        @if (!string.IsNullOrEmpty(schedule.Notes))
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-info-circle me-1"></i>@schedule.Notes
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        <i class="bi bi-person text-primary me-1"></i>
                                        <small>@schedule.FacultyName</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@schedule.DayName</span>
                                    </td>
                                    <td><strong>@schedule.PeriodRange</strong></td>
                                    <td><small class="text-muted">@schedule.TimeRange</small></td>
                                    <td>
                                        <i class="bi bi-geo-alt text-danger me-1"></i>
                                        <strong>@schedule.Room</strong>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(schedule.EnrolledStudentsCount > 0 ? "bg-success" : "bg-secondary")">
                                            @schedule.EnrolledStudentsCount
                                        </span>
                                    </td>
                                    <td>
                                        @if (schedule.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-pause-circle me-1"></i>Paused
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="EditSchedule" asp-route-id="@schedule.ScheduleId"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-delete-schedule"
                                                    data-schedule-id="@schedule.ScheduleId"
                                                    data-course-name="@schedule.CourseName"
                                                    data-day-name="@schedule.DayName"
                                                    data-period-range="@schedule.PeriodRange"
                                                    data-time-range="@schedule.TimeRange"
                                                    data-room="@schedule.Room"
                                                    data-student-count="@schedule.EnrolledStudentsCount"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Single Delete Modal (Outside Loop) -->
        <div class="modal fade" id="deleteScheduleModal" tabindex="-1" aria-labelledby="deleteScheduleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteScheduleModalLabel">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Confirm Delete Schedule
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this schedule?</p>
                        <div class="alert alert-warning">
                            <strong>Course:</strong> <span id="modalCourseName"></span><br />
                            <strong>Time:</strong> <span id="modalDayName"></span>, <span id="modalPeriodRange"></span> (<span id="modalTimeRange"></span>)<br />
                            <strong>Room:</strong> <span id="modalRoom"></span><br />
                            <strong>Enrolled Students:</strong> <span id="modalStudentCount"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cancel
                        </button>
                        <form id="deleteScheduleForm" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Weekly Summary -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <i class="bi bi-calendar-week me-2"></i>
                        <strong>Summary by Day</strong>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var day in Model.GroupBy(s => s.DayOfWeek).OrderBy(g => g.Key))
                            {
                                var daySchedules = day.ToList();
                                <div class="col-md-3 col-lg-2">
                                    <div class="card border-primary h-100">
                                        <div class="card-header bg-primary text-white text-center py-2">
                                            <strong>@SIMS.Helpers.ScheduleHelper.GetDayName(day.Key)</strong>
                                        </div>
                                        <div class="card-body text-center">
                                            <h3 class="text-primary mb-0">@daySchedules.Count</h3>
                                            <small class="text-muted">schedules</small>
                                            <hr class="my-2" />
                                            <small class="text-muted">
                                                @daySchedules.Sum(s => s.EnrolledStudentsCount) students
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-submit form on filter change
            $('select[name="semester"], select[name="dayOfWeek"]').on('change', function() {
                $(this).closest('form').submit();
            });

            // Handle delete schedule button click
            $('.btn-delete-schedule').on('click', function() {
                var $btn = $(this);
                var scheduleId = $btn.data('schedule-id');
                var courseName = $btn.data('course-name');
                var dayName = $btn.data('day-name');
                var periodRange = $btn.data('period-range');
                var timeRange = $btn.data('time-range');
                var room = $btn.data('room');
                var studentCount = $btn.data('student-count');

                // Populate modal with data
                $('#modalCourseName').text(courseName);
                $('#modalDayName').text(dayName);
                $('#modalPeriodRange').text(periodRange);
                $('#modalTimeRange').text(timeRange);
                $('#modalRoom').text(room);
                $('#modalStudentCount').text(studentCount);

                // Update form action
                var deleteUrl = '@Url.Action("DeleteSchedule", "Admin")' + '/' + scheduleId;
                $('#deleteScheduleForm').attr('action', deleteUrl);

                // Show modal
                var modal = new bootstrap.Modal(document.getElementById('deleteScheduleModal'));
                modal.show();
            });
        });
    </script>
}
