@model List<SIMS.Models.ViewModels.CourseFacultyListViewModel>
@{
    ViewData["Title"] = "Manage Faculty";
}

<div class="container-fluid">
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h2>
                    <i class="bi bi-people text-primary"></i>
                    Manage Faculty: @ViewBag.CourseName
                </h2>
                <p class="text-muted mb-0">
                    <strong>Course Code:</strong> @ViewBag.CourseCode
                </p>
            </div>
            <div class="col-auto">
                <a asp-action="AssignFacultyToCourse" asp-route-courseId="@ViewBag.CourseId" 
                   class="btn btn-primary">
                    <i class="bi bi-person-plus me-1"></i> Add Faculty
                </a>
                <a asp-action="Courses" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-person-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Faculty Yet</h4>
                <p class="text-muted">Click "Add Faculty" to assign faculty to this course</p>
                <a asp-action="AssignFacultyToCourse" asp-route-courseId="@ViewBag.CourseId" 
                   class="btn btn-primary mt-2">
                    <i class="bi bi-person-plus me-1"></i> Add First Faculty
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <i class="bi bi-list-ul me-2"></i>
                <strong>Faculty List</strong>
                <span class="badge bg-secondary ms-2">@Model.Count</span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 100px;">Faculty ID</th>
                                <th>Faculty Name</th>
                                <th style="width: 150px;">Role</th>
                                <th style="width: 150px;">Class/Group</th>
                                <th>Notes</th>
                                <th style="width: 120px;">Assigned Date</th>
                                <th style="width: 100px;">Status</th>
                                <th style="width: 100px;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong class="text-navy">@item.FacultyCode</strong></td>
                                    <td>
                                        <i class="bi bi-person text-primary me-1"></i>
                                        @item.FacultyName
                                    </td>
                                    <td>
                                        @if (item.Role == "Giảng viên chính")
                                        {
                                            <span class="badge bg-success">@item.Role</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@item.Role</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ClassGroup))
                                        {
                                            <span class="badge bg-secondary">@item.ClassGroup</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Notes))
                                        {
                                            <small>@item.Notes</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td><small class="text-muted">@item.AssignedDate.ToString("dd/MM/yyyy")</small></td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Hoạt động
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-pause-circle me-1"></i>Tạm dừng
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-danger btn-remove-faculty"
                                                data-cf-id="@item.CourseFacultyId"
                                                data-faculty-name="@item.FacultyName"
                                                data-course-id="@item.CourseId">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Card -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Tổng số giảng viên</h6>
                                <h3 class="mb-0">@Model.Count</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Đang hoạt động</h6>
                                <h3 class="mb-0">@Model.Count(m => m.IsActive)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-grid text-info" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Lớp/Nhóm</h6>
                                <h3 class="mb-0">@Model.Count(m => !string.IsNullOrEmpty(m.ClassGroup))</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Single Delete Modal -->
<div class="modal fade" id="removeCourseFacultyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Xác nhận xóa giảng viên
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn xóa giảng viên này khỏi môn học?</p>
                <div class="alert alert-warning">
                    <strong>Giảng viên:</strong> <span id="modalFacultyName"></span><br />
                    <strong>Môn học:</strong> @ViewBag.CourseName
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Hủy
                </button>
                <form id="removeCourseFacultyForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.btn-remove-faculty').on('click', function() {
                var cfId = $(this).data('cf-id');
                var facultyName = $(this).data('faculty-name');
                var courseId = $(this).data('course-id');

                $('#modalFacultyName').text(facultyName);
                
                var removeUrl = '@Url.Action("RemoveCourseFaculty", "Admin")' + '/' + cfId + '?courseId=' + courseId;
                $('#removeCourseFacultyForm').attr('action', removeUrl);

                var modal = new bootstrap.Modal(document.getElementById('removeCourseFacultyModal'));
                modal.show();
            });
        });
    </script>
}
