@model IEnumerable<SIMS.Models.Course>
@{
    ViewData["Title"] = "Course Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-book"></i> Course Management</h2>
        </div>
        <div class="col-auto">
            <a asp-action="CreateCourse" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Course
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <form method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="searchString" value="@ViewBag.SearchString" 
                           class="form-control"                            placeholder="Search by course code, course name, department...">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Course Code</th>
                            <th>Course Name</th>
                            <th class="text-center">Credits</th>
                            <th>Department</th>
                            <th>Faculty</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td><strong>@course.CourseCode</strong></td>
                                <td>@course.CourseName</td>
                                <td class="text-center"><span class="badge bg-info">@course.Credits</span></td>
                                <td>@course.Department</td>
                                <td>@(course.Faculty?.FullName ?? "Not Assigned")</td>
                                <td>
                                    @if (course.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Locked</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="ManageCourseFaculties" asp-route-courseId="@course.Id" 
                                           class="btn btn-outline-success" title="Manage Faculty">
                                            <i class="bi bi-people"></i>
                                        </a>
                                        <a asp-action="EditCourse" asp-route-id="@course.Id" 
                                           class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (course.IsActive)
                                        {
                                            <form asp-action="DeleteCourse" asp-route-id="@course.Id" 
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this course?\n\nNote: If the course has students or schedules, it will be deactivated instead of being completely deleted.');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary" disabled title="Deactivated">
                                                <i class="bi bi-lock"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
