@model SIMS.Models.ViewModels.CourseFormViewModel
@{
    ViewData["Title"] = "Add Course";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-book"></i> Add Course</h2>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="CreateCourse" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CourseCode" class="form-label"></label>
                        <input asp-for="CourseCode" class="form-control" />
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CourseName" class="form-label"></label>
                        <input asp-for="CourseName" class="form-control" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Credits" class="form-label"></label>
                        <input asp-for="Credits" type="number" min="1" max="10" class="form-control" />
                        <span asp-validation-for="Credits" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Department" class="form-label">
                            <i class="bi bi-building me-1"></i>
                            Department
                        </label>
                        <select asp-for="Department" class="form-select">
                            <option value="">-- Select Department --</option>
                            @foreach (var dept in ViewBag.Departments as string[])
                            {
                                <option value="@dept">@dept</option>
                            }
                        </select>
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="FacultyId" class="form-label">
                            <i class="bi bi-person me-1"></i>
                            Primary Faculty
                        </label>
                        <select asp-for="FacultyId" class="form-select" asp-items="ViewBag.Faculties">
                            <option value="">-- Select Primary Faculty --</option>
                        </select>
                        <span asp-validation-for="FacultyId" class="text-danger"></span>
                        <small class="text-muted">Optional. You can add more faculty after creating the course.</small>
                    </div>

                    <!-- ✅ NEW: Multiple Faculty Selection -->
                    <div class="col-md-12">
                        <label class="form-label">
                            <i class="bi bi-people me-1"></i>
                            Select Multiple Faculty (Optional)
                        </label>
                        <select name="selectedFaculties" class="form-select" multiple size="5">
                            @foreach (var faculty in ViewBag.Faculties as SelectList)
                            {
                                <option value="@faculty.Value">@faculty.Text</option>
                            }
                        </select>
                        <small class="text-muted">
                            <i class="bi bi-info-circle me-1"></i>
                            Hold Ctrl (Windows) or Cmd (Mac) to select multiple faculty. 
                            You can also add/manage faculty after creating the course.
                        </small>
                    </div>

                    <div class="col-md-12">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="col-12">
                        <hr />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-action="Courses" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Help Card -->
    <div class="card mt-3">
        <div class="card-header bg-info text-white">
            <i class="bi bi-info-circle me-2"></i>
            <strong>Guidelines</strong>
        </div>
        <div class="card-body">
            <h6>✨ New Feature: A course can have multiple faculty!</h6>
            <ul class="mb-0">
                <li><strong>Primary Faculty:</strong> The main faculty responsible for the course (optional)</li>
                <li><strong>Select Multiple Faculty:</strong> Can select when creating or add later</li>
                <li><strong>Manage Later:</strong> After creating the course, go to "Manage Faculty" to assign details (class, group, role)</li>
                <li><strong>Example:</strong> Course "Basic Programming" can have Faculty A teaching Class A, Faculty B teaching Class B</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Khi chọn Giảng viên chính, tự động chọn trong multiple select
            $('#FacultyId').on('change', function() {
                var selectedId = $(this).val();
                if (selectedId) {
                    $('select[name="selectedFaculties"] option[value="' + selectedId + '"]').prop('selected', true);
                }
            });
        });
    </script>
}
