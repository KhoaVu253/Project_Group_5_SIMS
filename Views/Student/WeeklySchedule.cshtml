@model SIMS.Models.ViewModels.StudentWeeklyScheduleViewModel
@{
    ViewData["Title"] = "Weekly Schedule";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h2>
                    <i class="bi bi-calendar-week text-primary"></i>
                    Weekly Schedule
                </h2>
                <p class="text-muted mb-0">
                    <strong>@Model.StudentName</strong> - @Model.StudentCode
                </p>
            </div>
            <div class="col-auto">
                <form method="get" class="row g-2">
                    <div class="col-auto">
                        <select name="semester" class="form-select form-select-sm" onchange="this.form.submit()">
                            @foreach (var sem in ViewBag.Semesters as string[])
                            {
                                <option value="@sem" selected="@(ViewBag.Semester == sem)">@sem</option>
                            }
                        </select>
                    </div>
                    <div class="col-auto">
                        <input type="text" name="academicYear" value="@ViewBag.AcademicYear" 
                               class="form-control form-control-sm" placeholder="2024-2025" />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (!Model.WeekSchedule.Any(d => d.HasClass))
    {
        <!-- No Schedule -->
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-calendar-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Schedule Yet</h4>
                <p class="text-muted">
                    You don't have any schedule for semester @Model.Semester - @Model.AcademicYear
                </p>
                <a asp-action="MySchedule" class="btn btn-primary mt-2">
                    <i class="bi bi-list me-1"></i> View Enrolled Courses
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-book text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Total Courses</h6>
                                <h3 class="mb-0">@Model.TotalCourses</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-calendar-check text-success" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Classes/Week</h6>
                                <h3 class="mb-0">@Model.TotalClassesPerWeek</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-calendar3 text-info" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Semester</h6>
                                <h3 class="mb-0">@Model.Semester</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-calendar-range text-warning" style="font-size: 2rem;"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Academic Year</h6>
                                <h3 class="mb-0" style="font-size: 1.5rem;">@Model.AcademicYear</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Weekly Schedule -->
        <div class="row g-3">
            @foreach (var day in Model.WeekSchedule)
            {
                <div class="col-12">
                    <div class="card shadow-sm @(day.HasClass ? "" : "bg-light")">
                        <div class="card-header @(day.HasClass ? "bg-primary text-white" : "bg-secondary text-white")">
                            <div class="d-flex align-items-center">
                                <i class="bi @(day.HasClass ? "bi-calendar-check" : "bi-calendar-x") me-2"></i>
                                <strong>@day.DayName</strong>
                                @if (day.HasClass)
                                {
                                    <span class="badge bg-light text-dark ms-auto">@day.Classes.Count classes</span>
                                }
                                else
                                {
                                    <span class="ms-auto"><small>No Schedule</small></span>
                                }
                            </div>
                        </div>
                        @if (day.HasClass)
                        {
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                    @foreach (var classItem in day.Classes.OrderBy(c => c.StartPeriod))
                                    {
                                        <div class="list-group-item">
                                            <div class="row align-items-center">
                                                <!-- Time -->
                                                <div class="col-md-2">
                                                    <div class="text-center">
                                                        <span class="badge @SIMS.Helpers.ScheduleHelper.GetSessionBadgeClass(classItem.StartPeriod)">
                                                            @classItem.SessionType
                                                        </span>
                                                        <div class="mt-2">
                                                            <strong style="font-size: 1.1rem;">@classItem.PeriodRange</strong>
                                                        </div>
                                                        <small class="text-muted">@classItem.TimeRange</small>
                                                    </div>
                                                </div>

                                                <!-- Course Info -->
                                                <div class="col-md-6">
                                                    <div class="d-flex align-items-start">
                                                        <i class="bi bi-book text-primary me-2 mt-1" style="font-size: 1.5rem;"></i>
                                                        <div>
                                                            <h5 class="mb-1">
                                                                <span class="badge bg-secondary me-2">@classItem.CourseCode</span>
                                                                @classItem.CourseName
                                                            </h5>
                                                            <p class="mb-1 text-muted">
                                                                <i class="bi bi-person me-1"></i>
                                                                <strong>Faculty:</strong> @classItem.FacultyName
                                                            </p>
                                                            @if (!string.IsNullOrEmpty(classItem.Notes))
                                                            {
                                                                <p class="mb-0">
                                                                    <i class="bi bi-info-circle text-info me-1"></i>
                                                                    <small class="text-muted">@classItem.Notes</small>
                                                                </p>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Room & Credits -->
                                                <div class="col-md-4">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <div class="text-center p-2 bg-light rounded">
                                                                <i class="bi bi-geo-alt-fill text-danger"></i>
                                                                <div><strong>Room</strong></div>
                                                                <h4 class="mb-0 text-danger">@classItem.Room</h4>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="text-center p-2 bg-light rounded">
                                                                <i class="bi bi-award-fill text-success"></i>
                                                                <div><strong>Credits</strong></div>
                                                                <h4 class="mb-0 text-success">@classItem.Credits</h4>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Legend -->
        <div class="card mt-4 shadow-sm">
            <div class="card-body">
                <h6 class="card-title">
                    <i class="bi bi-info-circle me-2"></i>
                    Legend
                </h6>
                <div class="row">
                    <div class="col-md-6">
                        <ul class="list-unstyled mb-0">
                            <li><span class="badge bg-info me-2">Morning</span> Period 1-6 (07:00 - 12:20)</li>
                            <li><span class="badge bg-warning me-2">Afternoon</span> Period 7-12 (13:00 - 18:20)</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <ul class="list-unstyled mb-0">
                            <li><i class="bi bi-book text-primary me-2"></i> Course Information</li>
                            <li><i class="bi bi-person me-2"></i> Teaching Faculty</li>
                            <li><i class="bi bi-geo-alt-fill text-danger me-2"></i> Classroom</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Print Button -->
        <div class="text-center mt-4 mb-4">
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="bi bi-printer me-2"></i> Print Schedule
            </button>
            <a asp-action="MySchedule" class="btn btn-outline-secondary">
                <i class="bi bi-list me-2"></i> View List Format
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Print styling
        window.onbeforeprint = function() {
            document.body.classList.add('printing');
        };
        window.onafterprint = function() {
            document.body.classList.remove('printing');
        };
    </script>
}

<style>
    @@media print {
        .page-header, .btn, .card-header select, nav, footer {
            display: none !important;
        }
        .card {
            border: 1px solid #dee2e6 !important;
            page-break-inside: avoid;
        }
    }
</style>
