@model IEnumerable<SIMS.Models.Enrollment>
@{
    ViewData["Title"] = "My Grades";
}

<div class="page-header">
    <h2>
        <i class="bi bi-trophy"></i>
        Grades
    </h2>
    <p class="text-muted">View grades of completed courses</p>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="bi bi-calendar3 me-1"></i>
                    Filter by Semester
                </label>
                <select name="semester" class="form-select" onchange="this.form.submit()">
                    <option value="">-- All Semesters --</option>
                    @foreach (var sem in ViewBag.Semesters as string[])
                    {
                        <option value="@sem" selected="@(ViewBag.Semester == sem)">@sem</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> View Grades
                </button>
            </div>
        </form>
    </div>
</div>

@{
    var groupedEnrollments = Model.GroupBy(e => new { e.AcademicYear, e.Semester })
                                  .OrderByDescending(g => g.Key.AcademicYear)
                                  .ThenByDescending(g => g.Key.Semester);
}

@if (!groupedEnrollments.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">No Data</h4>
            <p class="text-muted">
                You have not been assigned to any courses or have no grades yet.
            </p>
        </div>
    </div>
}

@foreach (var group in groupedEnrollments)
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-calendar3 me-2"></i>
            @group.Key.Semester - Academic Year @group.Key.AcademicYear
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th><i class="bi bi-book me-1"></i> Course Code</th>
                            <th>Course Name</th>
                            <th class="text-center"><i class="bi bi-award me-1"></i> Credits</th>
                            <th class="text-center">Midterm</th>
                            <th class="text-center">Final</th>
                            <th class="text-center">Average</th>
                            <th class="text-center">Grade</th>
                            <th class="text-center">✅ Status</th>
                            <th class="text-center">✅ Retake</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                            foreach (var enrollment in group.OrderBy(e => e.Course.CourseCode))
                            {
                                // ✅ Highlight row if failed
                                var rowClass = enrollment.IsFailed ? "table-danger" : "";
                                
                                <tr class="@rowClass">
                                    <td>@stt</td>
                                    <td><strong class="text-navy">@enrollment.Course.CourseCode</strong></td>
                                    <td>
                                        @enrollment.Course.CourseName
                                        @* ✅ Show retake indicator *@
                                        @if (enrollment.IsRetaking)
                                        {
                                            <span class="badge bg-warning ms-2">
                                                <i class="bi bi-arrow-repeat"></i> Retake #@enrollment.RetakeCount
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@enrollment.Course.Credits</span>
                                    </td>
                                    <td class="text-center">
                                        @if (enrollment.MidtermScore.HasValue)
                                        {
                                            <span class="text-primary">@enrollment.MidtermScore.Value.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (enrollment.FinalScore.HasValue)
                                        {
                                            <span class="text-primary">@enrollment.FinalScore.Value.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (enrollment.AverageScore.HasValue)
                                        {
                                            // ✅ Red if failed
                                            var scoreClass = enrollment.AverageScore.Value < 5.0f ? "text-danger" : "text-success";
                                            <strong class="@scoreClass">
                                                @enrollment.AverageScore.Value.ToString("F2")
                                            </strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(enrollment.LetterGrade))
                                        {
                                            var badgeClass = enrollment.LetterGrade.StartsWith("A") ? "bg-success" :
                                                           enrollment.LetterGrade.StartsWith("B") ? "bg-primary" :
                                                           enrollment.LetterGrade.StartsWith("C") ? "bg-info" :
                                                           enrollment.LetterGrade.StartsWith("D") ? "bg-warning" : "bg-danger";
                                            <span class="badge @badgeClass">@enrollment.LetterGrade</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    @* ✅ NEW: Status column *@
                                    <td class="text-center">
                                        @if (enrollment.Status == "Completed")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Passed
                                            </span>
                                        }
                                        else if (enrollment.Status == "Failed")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle-fill"></i> Failed
                                            </span>
                                        }
                                        else if (enrollment.Status == "Retaking")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-arrow-repeat"></i> Retaking
                                            </span>
                                        }
                                        else if (enrollment.Status == "Active")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-hourglass-split"></i> Studying
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@enrollment.Status</span>
                                        }
                                    </td>
                                    @* ✅ NEW: Retake action column *@
                                    <td class="text-center">
                                        @if (enrollment.Status == "Failed")
                                        {
                                            <a asp-controller="Student" 
                                               asp-action="RetakeCourse" 
                                               asp-route-enrollmentId="@enrollment.Id"
                                               class="btn btn-sm btn-warning"
                                               title="Register for Retake"
                                               onclick="return confirm('Do you want to register for retaking this course?')">
                                                <i class="bi bi-arrow-repeat"></i> Retake
                                            </a>
                                        }
                                        else if (enrollment.IsRetaking)
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-hourglass-split"></i> Retaking
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                stt++;
                            }
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3"><strong>Semester Total:</strong></td>
                            <td class="text-center">
                                <strong>@group.Sum(e => e.Course.Credits) Credits</strong>
                            </td>
                            <td colspan="2"></td>
                            <td class="text-center">
                                @{
                                    var semesterGrades = group.Where(e => e.AverageScore.HasValue)
                                                              .Select(e => e.AverageScore!.Value);
                                    if (semesterGrades.Any())
                                    {
                                        <strong class="text-primary">@semesterGrades.Average().ToString("F2")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                }
                            </td>
                            <td colspan="3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}

@if (Model.Any())
{
    var allGrades = Model.Where(e => e.AverageScore.HasValue)
                        .Select(e => e.AverageScore!.Value);
    var failedCount = Model.Count(e => e.Status == "Failed");
    var retakingCount = Model.Count(e => e.Status == "Retaking");
    
    if (allGrades.Any())
    {
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-card stat-card-primary">
                    <i class="bi bi-trophy-fill icon"></i>
                    <h6>Cumulative GPA</h6>
                    <h2>@allGrades.Average().ToString("F2")</h2>
                    <small class="text-white d-block mt-2">Average Score</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-card-info">
                    <i class="bi bi-award-fill icon"></i>
                    <h6>Total Credits</h6>
                    <h2>@Model.Sum(e => e.Course.Credits)</h2>
                    <small class="text-white d-block mt-2">Enrolled</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-card-success">
                    <i class="bi bi-check-circle-fill icon"></i>
                    <h6>Passed Courses</h6>
                    <h2>@Model.Count(e => e.Status == "Completed")</h2>
                    <small class="text-white d-block mt-2">Completed</small>
                </div>
            </div>
            @* ✅ NEW: Failed courses stat *@
            <div class="col-md-3">
                <div class="stat-card stat-card-danger">
                    <i class="bi bi-x-circle-fill icon"></i>
                    <h6>Failed Courses</h6>
                    <h2>@failedCount</h2>
                    <small class="text-white d-block mt-2">
                        @if (retakingCount > 0)
                        {
                            <span>(@retakingCount retaking)</span>
                        }
                        else
                        {
                            <span>Need Retake</span>
                        }
                    </small>
                </div>
            </div>
        </div>
    }
}
